<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Req_FragmentModule"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ser_tvback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="@color/red"
            android:layout_marginBottom="40dp"/>

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requested Date"
            android:textStyle="bold"/> 

        <TextView
            android:id="@+id/ser_reqdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"/>

         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document Type"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ser_doctype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"/>

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textStyle="bold"/> 

        <TextView
            android:id="@+id/ser_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"/>

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rental Date"
            android:textStyle="bold"/> 

        <TextView
            android:id="@+id/ser_rentaldate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"/>

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"/> 

        <TextView
            android:id="@+id/ser_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"/>


       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Option"
            android:textStyle="bold"/> 

        <TextView
            android:id="@+id/ser_do"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"/>

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purpose"
            android:textStyle="bold"/> 

        <TextView
            android:id="@+id/ser_purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"/>

         <TextView
            android:id="@+id/lbl_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note"
            android:textStyle="bold"/> 
    
        <TextView
            android:id="@+id/ser_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/lbl_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deadline"
            android:textStyle="bold"/> 
    
        <TextView
            android:id="@+id/ser_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt"
            android:textSize="18dp"/>
     </LinearLayout>
</ScrollView>