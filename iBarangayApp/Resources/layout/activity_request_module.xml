<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestModule">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="BACK"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Select type of Certificate*"
            style="@style/textDesign"/>

        <Spinner
            android:id="@+id/spnrCertificate"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Purpose*"
            style="@style/textDesign"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ETPurposeCert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/navy3"
                android:inputType="textMultiLine"
                android:lines="10"
                android:singleLine="false"
                android:scrollbars="vertical"
                android:gravity="start"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Delivery Option"
            style="@style/textDesign"/>

        <Spinner
            android:id="@+id/spnrDeliveryOption"
            android:layout_width="match_parent"
            android:layout_height="35dp" 
            android:layout_marginBottom="30dp"/>

        
        <TextView
            android:id="@+id/tvDocFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doc Fee: "
            android:textColor="@color/red"
            style="@style/textDesign"/>

        <TextView
            android:id="@+id/tvDeliveryFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Fee: "
            android:textColor="@color/red"
            style="@style/textDesign"/>

        <Button
            android:id="@+id/btnRequest"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Request" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>