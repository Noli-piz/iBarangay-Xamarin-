<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Req_FragmentModule"
    android:padding="30dp">

    <TextView
        android:id="@+id/req_tvback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:textSize="18dp"
        android:textColor="@color/red"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/req_doctype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Document Type:"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/req_reqdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Requested Date:"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/req_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/req_do"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery Option:"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/req_purpose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purpose:"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"/>

   <TextView
        android:id="@+id/req_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note:"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>